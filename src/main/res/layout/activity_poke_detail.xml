<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1500dp"
        android:minHeight="730dp"
        android:orientation="vertical"
        tools:context=".PokeDetailActivity">

        <ImageView
            android:id="@+id/image_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_launcher_foreground" />

        <TextView
            android:id="@+id/title_detail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/textview"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp" />

        <TextView
            android:id="@+id/titleAbility"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="0dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/textview"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/listDetail"
            android:layout_width="match_parent"
            android:layout_height="105dp" />

        <TextView
            android:id="@+id/titleMove"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-1dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/textview"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/listDetailMove"
            android:layout_width="match_parent"
            android:layout_height="105dp" />

        <TextView
            android:id="@+id/titleStat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-1dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/textview"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/listDetailStat"
            android:layout_width="match_parent"
            android:layout_height="105dp" />

        <TextView
            android:id="@+id/titleType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="-1dp"
            android:fontFamily="sans-serif-medium"
            android:text="@string/textview"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="24sp" />

        <ListView
            android:id="@+id/listDetailType"
            android:layout_width="match_parent"
            android:layout_height="105dp" />

    </LinearLayout>
</ScrollView>